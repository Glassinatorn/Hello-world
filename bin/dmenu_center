#! /bin/sh

#	eeeee eeeeeee eeee eeeee e   e
#	8   8 8  8  8 8    8   8 8   8
#	8e  8 8e 8  8 8eee 8e  8 8e  8
#	88  8 88 8  8 88   88  8 88  8
#	88ee8 88 8  8 88ee 88  8 88ee8


MON=`xrandr | grep connected | grep -v disconnected | wc -l`

case $MON in
	1) CENTER='-i -x 730 -y 430 -h 20 -l 10 -w 500' ;;
	2) CENTER='-i -x 730 -y 430 -h 20 -l 10 -w 500' ;;
	3) CENTER='-i -x 350 -y 730 -h 20 -l 10 -w 400' ;;
esac

case $@ in
	--run) dmenu_run $CENTER ;;
	*) dmenu $CENTER $@ ;;
esac
