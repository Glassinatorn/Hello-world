# web browser
super + w
    qutebrowser_session

# terminal emulator
super + Return
    st

# program launcher
super + space
    dmenu_center --run

# make sxhkd reload its configuration files:
super + shift + r
    fix

#
# run scripts
#

# shutdown
super + x
    shutdown.sh

# screenshot
super + p
    screenshot.sh

# attach to tmux session
ctrl + shift + t
    #st -e tmx.sh
    #tmux a -t $(tmux ls | awk '{print $1}' | cut -d ":" -f1 | dmenu_center -p Tmux)
    notify-send "$(st -e tmux ls)"

# show info
ctrl + i
    sysinfo

# opens calcurse
super + c
    st -c calcurse -e calcurse

# opens mail
super + m
    st -c calcurse -e neomutt

# show calendar info
ctrl + shift + i
    notify-send \
        "$(date | cut -d ' ' -f 1-3)" \
        "$(calcurse -Q --filter-priority 1 --format-todo %N)"

# fix screens and touchpad
ctrl + shift + f
    fix

# switch between igpu and egpu
ctrl + shift + e
    pk_eGPU

# rotating screen
ctrl + shift + r
    rotate.sh

# toggling keyboard layout
ctrl + space
    keymap

# volume control keys
XF86AudioMute
    pamixer -t
XF86AudioRaiseVolume
    pamixer -i 5
XF86AudioLowerVolume
    pamixer -d 5
XF86MonBrightnessUp
    xbacklight +10
XF86MonBrightnessDown
    xbacklight -10
