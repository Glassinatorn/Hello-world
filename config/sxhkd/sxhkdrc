#
# state/flags
#

# set the window state
super + {t,shift + t,f,shift + f}
    bspc node -t {tiled,pseudo_tiled,fullscreen,floating}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
    bspc node -f @{parent,brother,first,second}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}:
    bspc node -p {west,south,north,east} 0,2; dmenu_center --run

# preselect the ratio
super + ctrl + {1-9}
    bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel


#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
    bspc node -z {right -40 0,top 0 40,top 0 -40,right 40 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
    bspc node -z {right -40 0,top 0 40,bottom 0 -40,left 40 0}

# move a floating window
super + {Left,Down,Up,Right}
    bspc node -v {-40 0,0 40,0 -40,40 0}

# close and kill
super + q
    bspc node -k

# make bspwm reload its config
super + ctrl + r
    ./~/.config/bspwm/bpswmrc


# web browser
super + w
    qutebrowser_session

# terminal emulator
super + Return
    st

# program launcher
super + space
    dmenu_center --run

# make sxhkd reload its configuration files:
super + shift + r
    pkill -USR1 -x sxhkd

#
# run scripts
# ! REMEMBER TO HAVE THE WINDOW MANAGER EXPORT PATH BEFORE THIS !

# shutdown
super + x
    shutdown.sh

# screenshot
super + p
    screenshot.sh

# attach to tmux session
ctrl + shift + t
    st -e tmx.sh

# show info
ctrl + i
    sysinfo

# show calendar info
ctrl + shift + i
    calinfo

# fix screens and touchpad
ctrl + shift + f
    fix

# switch between igpu and egpu
ctrl + shift + e
    pk_eGPU

# rotating screen
ctrl + shift + r
    rotate.sh

# toggling keyboard layout
ctrl + space
    keymap

# volume control keys
XF86AudioMute
    pamixer -t
XF86AudioRaiseVolume
    pamixer -i 5
XF86AudioLowerVolume
    pamixer -d 5
XF86MonBrightnessUp
    xbacklight +10
XF86MonBrightnessDown
    xbacklight -10
