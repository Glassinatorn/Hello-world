# web browser
super + w
    qutebrowser_session

# terminal emulator
super + Return
    st

# program launcher
super + space
    dmenu_center --run

# make sxhkd reload its configuration files:
super + shift + r
    pkill -USR1 -x sxhkd

#
# run scripts
#

# shutdown
super + x
    shutdown.sh

# screenshot
super + p
    screenshot.sh

# attach to tmux session
ctrl + shift + t
    st -e tmx.sh

# show info
ctrl + i
    sysinfo

# opens calcurse
super + c
    st -c calcurse -e calcurse

# opens mail
super + m
    st -c calcurse -e neomutt

# show calendar info
ctrl + shift + i
    calinfo

# fix screens and touchpad
ctrl + shift + f
    fix

# switch between igpu and egpu
ctrl + shift + e
    pk_eGPU

# rotating screen
ctrl + shift + r
    rotate.sh

# toggling keyboard layout
ctrl + space
    keymap

# volume control keys
XF86AudioMute
    pamixer -t
XF86AudioRaiseVolume
    pamixer -i 5
XF86AudioLowerVolume
    pamixer -d 5
XF86MonBrightnessUp
    xbacklight +10
XF86MonBrightnessDown
    xbacklight -10
