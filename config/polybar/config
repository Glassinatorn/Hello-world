[bar/edp-1]
wm-restack = bspwm
override-redirect = true
width = 3.6%
height = 25
offset-y = 0.3%
offset-x = 0.3%

enable-ipc = true
monitor = eDP1

line-size = 3

background = ${colors.gruv-dark}
foreground = ${colors.gruv-dark}

font-0 = FontAwesome:size=10;2
font-1 = Roboto:size=10;2
font-2 = MaterialDesignIcons:size=12;0

spacing = 1
separator = " "
modules-center = bspwm

[bar/edp-2]
